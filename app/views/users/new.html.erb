<%= form_for @user, url: users_path, html: { class: "form background-color" } do |f| %>
  <nav class="top-nav-bar">
    <%= link_to(root_path) do %>
      <%= image_tag('RecurrEx-logo.png', alt: 'Recurrex Logo', class: 'logo-image') %>
    <% end %>
    <div class="top-nav-links">
    <%= link_to 'Login', login_path, class: 'btn btn-outline-primary accent-color', onmouseover: 'this.style.backgroundColor = "navy"', onmouseout: 'this.style.backgroundColor = "grey";' %>
    </div>
</nav>

<div class="container" style="background-image: url('/assets/bckg1.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed;">
  <div class="edit-profile-form">
    <h1>Sign Up</h1>
    <br>
    <div class="form-group">
      <div class="form-floating">
        <%= f.text_field :first_name, class: "form-control custom", placeholder: "", required: "true" %>
        <%= f.label :first_name, class: "form-label" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="form-floating">
        <%= f.text_field :last_name, class: "form-control custom", placeholder: "", required: "true" %>
        <%= f.label :last_name, class: "form-label" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="form-floating">
        <%= f.email_field :email, class: "form-control custom", placeholder: "", required: "true" %>
        <%= f.label :email, class: "form-label" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="form-floating">
        <%= f.password_field :password, class: "form-control custom", minlength: 6, placeholder: "", required: "true" %>
        <%= f.label :password, class: "form-label" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="form-floating">
        <%= f.password_field :password_confirmation, class: "form-control custom", placeholder: "", required: "true" %>
        <%= f.label :password_confirmation, class: "form-label" %>
      </div>
    </div>
    <br>
    <div class="edit-actions">
      <%= f.submit 'Submit', class: "btn btn-outline-primary accent-color" %>
    </div>
    <% end %>
  </div>
</div>