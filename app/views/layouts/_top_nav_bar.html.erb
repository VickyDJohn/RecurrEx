<!DOCTYPE html>
<html>
  <head>
    <!-- Your head content here -->
  </head>

  <body>
    <nav class="top-nav-bar">
      <% if current_user %>
        <%= link_to(user_path(current_user.id)) do %>
          <%= image_tag('RecurrEx-logo.png', alt: 'Recurrex Logo', class: 'logo-image') %>
        <% end %>
        <div class="top-nav-links">
          <div class="nav-link">
            <%= link_to 'Add Subscription', new_subscription_path %>
          </div>
          <div class="nav-link">
            <%= link_to 'My Subscriptions', subscriptions_path %>
          </div>
          <div class="nav-link">
            <%= link_to 'Reminders', recent_reminders_path %>
          </div>
          <% if current_user %>
            <div class="nav-link">
              <%= link_to 'Edit Profile', edit_user_path(current_user) %>
            </div>
            Signed in as <%= current_user.first_name %> | <%= link_to "Logout", '/logout', class: 'btn btn-outline-danger accent-color', style: 'background-color: red;', onmouseover: 'this.style.backgroundColor = "amber";'%>
          <% else %>
            <% unless current_page?('/login') %>
              <%= link_to 'Login', '/login', class: 'btn btn-outline-primary accent-color', onmouseover: 'this.style.backgroundColor = "navy"', onmouseout: 'this.style.backgroundColor = "grey";' %> |
            <% end %>
            <% unless current_page?('/signup') %>
              <%= link_to 'Signup', '/signup', class: 'btn btn-outline-primary accent-color'  %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </nav>
  </body>
</html>